!!! 5
%html{'ng-app' => 'songbooks', 'ng-controller' => 'SongsController as songsCtrl'}
  %head
    %link{:href => '/stylesheets/bootstrap.min.css', :rel => 'stylesheet'}/
    %link{:href => '/stylesheets/bootstrap-theme.min.css', :rel => 'stylesheet'}/
    %link{:href => '/stylesheets/application.css', :rel => 'stylesheet'}/

    - %w(jquery-2.1.4.min angular angular-route application directives filter routes services controller).each do |file|
      %script{:src => "/javascripts/#{file}.js", :type => 'text/javascript'}

  %body
    .container-fluid
      .row
        .col-sm-3
          .panel.panel-default
            .panel-heading
              %h3.panel-title
                Available Songs
                %br/
                %small= Songbooks.chords_directory.path
            .list-group#songs
              .list-group-item
                %input.form-control{:type => 'text', :ng => {:model => 'songsCtrl.filterQuery'}}
              %a.list-group-item{:ng => {:click  => 'songsCtrl.setActive(song)',
                                         :repeat => 'song in songsCtrl.songs() | filter: songsCtrl.filterQuery',
                                         :class  => "{ 'active': song.active }"}}
                %small
                  {{ song.artist }}
                %br/
                {{ song.title }}

        .col-sm-6
          .panel.panel-default
            .panel-body#main-content{:ng => {:view => true}}
