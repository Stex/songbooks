#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'
require 'active_support/all'

Bundler.require

require_relative '../lib/songbooks'

Dir[File.join(Songbooks.lib_dir, '**', '*.rb')].each do |file|
  require_relative file
end

puts "Starting songbooks server for directory '#{Songbooks.chords_directory_path}'"